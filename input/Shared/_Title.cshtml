@* The root page of this section is passed in as the model *@

@(Document.GetString(Keys.Title) ?? Document.GetTitle())
@if (Document.GetList<string>("Badge")?.Contains("Web") == true)
{
    <text><?# WebBadge /?></text>
}
@if (Document.GetList<string>("Badge")?.Contains("Docs") == true)
{
    <text><?# DocsBadge /?></text>
}
@if (Document.GetInt(Keys.Index) > 1)
{
    <small>(Page @Document.GetString(Keys.Index))</small>
}